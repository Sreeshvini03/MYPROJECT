<% layout("/layouts/boilerplate") %>
<style>
    .dropdown-toggle {
        border: 1px black solid;
 
    }
    .option {
       
        color: white;
        text-align: left; 

    }
</style>
<div class="row mt-3">
    <div class="col-8 offset-2">
    <h3>Create a New Listing</h3>
    <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data"> <!-- we use enctype as multi... so that our files which will be uploaded(of any form pictures,pdfs..) can we sent to backend -->
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input name="listing[title]" placeholder="Add a catchy title" type="text" class="form-control" required>
            <div class="valid-feedback">Title looks good!</div>
            <div class="invalid-feedback">Title name is mandatory</div>
        </div>
        <div class="mb-3"> 
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" class="form-control" required></textarea>
            <div class="invalid-feedback">Enter a short description</div>
        </div>
        <div class="mb-3">
            <label for="image" class="form-label">Upload Listing Image</label>
            <input name="listing[image]"  type="file" class="form-control" required>
        </div>
        <div class="mb-3">
            <label for="cat" class="form-label">Choose the type of Location</label>
            <div class="dropdown">
                <select class="btn btn-secondary dropdown-toggle " id="cat" name="category">
                    <option class="option" value="Trending">Trending</option>
                    <option class="option" value="Rooms">Rooms</option>
                    <option class="option" value="Iconic cities">Iconic cities</option>
                    <option class="option" value="Mountains">Mountains</option>
                    <option class="option" value="Castles">Castles</option>
                    <option class="option" value="Amazing pools">Amazing pools</option>
                    <option class="option" value="Camping">Camping</option>
                    <option class="option" value="Farms">Farms</option>
                    <option class="option" value="Arctic">Arctic</option>
                </select>
        </div>
        <br>
        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="form-label">Price</label>
                <input name="listing[price]" placeholder="1200" class="form-control" required>
                <div class="invalid-feedback">Enter a valid price</div>
            </div>
            <div class="mb-3 col-md-8">
                <label for="country" class="form-label">Country</label>
                <input name="listing[country]" placeholder="India" type="text" class="form-control" required>
                <div class="invalid-feedback">Enter a valid country name</div>
            </div>
        </div>
        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input name="listing[location]" placeholder="Hyderabad,Telangana" type="text" class="form-control" required>
            <div class="invalid-feedback">Enter a valid location</div>
        </div>
        
        <button class="btn btn-dark add-btn">Add</button>
        <br><br>
    </form>
    </div>
</div>

